curl ifconfig.me[Unit]
Description=Excel Refractor Flask Application
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/data-analysis
Environment="PATH=/home/ec2-user/data-analysis/venv/bin"
ExecStart=/home/ec2-user/data-analysis/venv/bin/gunicorn --bind 0.0.0.0:5000 --workers 1 --timeout 300 --worker-class sync app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
