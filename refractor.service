[Unit]
Description=Excel Refractor Flask Application
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/refractor
Environment="PATH=/home/ec2-user/refractor/venv/bin"
ExecStart=/home/ec2-user/refractor/venv/bin/gunicorn --bind 0.0.0.0:5000 --workers 4 app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
